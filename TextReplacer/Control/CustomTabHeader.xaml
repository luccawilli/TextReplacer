<UserControl x:Class="TextReplacer.Control.CustomTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TextReplacer.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="cc">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
        <DockPanel Width="30"  >
            <Image Source="{Binding ImageSource, ElementName=cc}" Width="20" Height="30" />
        </DockPanel>
        <TextBlock Text="{Binding Text, ElementName=cc}" VerticalAlignment="Center" Margin="5,0,0,0" Width="90" Visibility="{Binding TextVisibility, ElementName=cc}"/>
    </StackPanel>
</UserControl>
