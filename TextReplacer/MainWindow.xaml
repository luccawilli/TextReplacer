<Window x:Class="TextReplacer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextReplacer"
        mc:Ignorable="d"
        Title="Text Replacer" Height="800" MinHeight="800" Width="720" MinWidth="720" Icon="Replacer.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="50"/>
            <RowDefinition  Height="2*"/>
            <RowDefinition  Height="3*"/>
        </Grid.RowDefinitions>
        <Button x:Name="StartButton" Grid.Column="1" Grid.Row="0" Content="Start" Margin="10" Click="HandleStartButtonClicked" Height="30"/>
        <TextBlock x:Name="StatusText" Text="Status: Alles okay" FontWeight="SemiBold" HorizontalAlignment="Left" Margin="10" Height="20"/>

        <DockPanel Grid.Column="0" Grid.Row="1" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="Vorgabetext (Template)" HorizontalAlignment="Left" Margin="10,10,10,0" Height="20"/>
            <TextBox x:Name="TemplateText" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  AcceptsReturn="True" Margin="10" TextWrapping="Wrap" Height="Auto" Text="" />
        </DockPanel>

        <DockPanel Grid.Column="1" Grid.Row="1" LastChildFill="True">
            <TextBlock DockPanel.Dock="Top" Text="Trennzeichen" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,0" Height="20"/>
            <TextBox DockPanel.Dock="Top" x:Name="SplitCharsForLabels" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Text="\r\n" Height="25" Width="30"/>

            <TextBlock DockPanel.Dock="Top" Text="Ersetzungszeichen" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,0" Height="20"/>
            <TextBox DockPanel.Dock="Top" x:Name="ReplacementCharacters" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="10" Text="xxx" Height="25"  />

            <TextBlock DockPanel.Dock="Top" Text="Einzufügende Labels" TextWrapping="Wrap" HorizontalAlignment="Left" Margin="10,10,10,0" Height="20" />
            <TextBox x:Name="ToInsertLabels"  Margin="10" TextWrapping="Wrap" AcceptsReturn="True" Text="" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        </DockPanel>
        <Border BorderThickness="0,1,0,0" BorderBrush="LightGray" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="2">
            <DockPanel  LastChildFill="True" >
            <TextBlock Text="Output" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,10,10,0" Height="20"/>
            <TextBox x:Name="ResultView" TextWrapping="Wrap" Text="" Margin="10" VerticalAlignment="Stretch" FontSize="15" HorizontalAlignment="Stretch" IsReadOnly="True" IsReadOnlyCaretVisible="True"/>
        </DockPanel>
       </Border>
    </Grid>
</Window>
